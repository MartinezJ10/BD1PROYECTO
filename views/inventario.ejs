      <br>

      <h2 style="color: aliceblue;" class="text-center">Mi Inventario: <strong><%=IdUsuarioProductor.Usuario%></strong></h2>
      <br>

      <table class="table text-center" style="color: white;">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Producto</th>
            <th scope="col">Tipo Movimiento</th>
            <th scope="col">Establecimiento</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Fecha Entrada</th>
            <th scope="col">Referencia</th>
          </tr>
        </thead>
        <tbody>
            <% inventarios.forEach(inventario => { %>   
                <tr>
                    <td><%=inventario.ID %></td>
                    <td><%=inventario.producto %></td>
                    <td><%=inventario.movimiento %></td>
                    <td><%=inventario.establecimiento %></td>
                    <td><%=inventario.cantidad %></td>
                    <td><%=inventario.fecha %></td>
                    <td><%=inventario.referencia %></td>
                    <hr>
                </tr>
                <%  });  %>
        </tbody>
        
      </table>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

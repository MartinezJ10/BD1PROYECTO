  </style>
      <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }
        header {
            background-color: #02361c;
            color: #fff;
            padding: 20px;
            text-align: center;
        }
        section {
            padding: 20px;
        }
        .product {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(13, 200, 16, 0.575);
            padding: 20px;
            margin-bottom: 20px;
        }
        .product img {
            max-width: 100%;
            height: auto;
        }
        .product h2 {
            margin-top: 0;
        }
        .product p {
            margin-bottom: 10px;
        }
        .btn {
            cursor: pointer;
        }
        .product-list {
         display: none;
        position: absolute;
        background-color: #ffffff; /* Color de fondo de la lista */
        padding: 10px;
        list-style-type: none;
}

        .nav-item:hover .product-list {
         display: block;
}

    </style>
</head>
<body>

  
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Productor</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/principalProductor">Inicio</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/agregarProductos">Agregar Productos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/mostrarInventarios">Inventario</a> 
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/nuevoEstablecimiento">Agregar Establecimiento</a> 
        </li>
        <li class="nav-item">
          <a href="/logout" class="nav-link"  style="color: white;">Cerrar Sesi√≥n</a>
      </li>
      </ul>
    </div>
  </nav>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Productos</h2>
      <section class="container">
        <div class="row">
            <% productosProductor.forEach(producto => { %>
                <div class="col-md-4">
                    <div class="product">
                        <img src="<%=producto.RutaImagen%>" alt="Producto <%=producto.ID  %>">
                        <h2><%= producto.Nombre %></h2>
                        <p><%= producto.Descripcion %></p>
                        <p>L. <%= producto.Precio %></p> 
                    </div>
                </div><%  });  %>
        </div>
    </section>
  </div>

  <!-- jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
